<ComponentSchema packageName="com.iwsdk.components">
  <Component name="TaskCard" description="EliCS component: TaskCard">
    <StringAttribute name="taskId" defaultValue=""/>
    <EnumAttribute name="column"/>
    <StringAttribute name="text" defaultValue="New Task"/>
    <EnumAttribute name="priority"/>
    <IntAttribute name="position" defaultValue="0"/>
    <StringAttribute name="comments" defaultValue="[]"/>
    <StringAttribute name="assignedTo" defaultValue=""/>
    <FloatAttribute name="createdAt" defaultValue="0f"/>
    <BooleanAttribute name="isGrabbed" defaultValue="false"/>
    <Vector3Attribute name="targetPosition" defaultValue="0f, 0f, 0f"/>
  </Component>
</ComponentSchema>